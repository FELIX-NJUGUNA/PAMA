<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewAsset"
    android:padding="20dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="38dp"

        android:layout_marginTop="4dp"
        android:text="Add Asset"
        android:textColor="@color/storm"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/save_asset"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_asset"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/storm"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/assetname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="Asset Name"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="Amount Allocated"
        android:inputType="numberDecimal"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.881" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_marginBottom="549dp"
        android:inputType="numberDecimal"
        android:text="Wallet"
        android:textColor="@color/storm"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assetname" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Cash"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="382dp" />

        <RadioButton
            android:id="@+id/bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Bank"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="381dp" />

        <RadioButton
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Card"
            tools:layout_editor_absoluteX="269dp"
            tools:layout_editor_absoluteY="383dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:text="Asset Category"
        android:textColor="@color/storm"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="355dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <CheckBox
            android:id="@+id/transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="543dp" />

        <CheckBox
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="508dp" />

        <CheckBox
            android:id="@+id/construction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Construction"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="571dp" />

        <CheckBox
            android:id="@+id/clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothes"
            tools:ignore="UnknownId"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="599dp" />

        <CheckBox
            android:id="@+id/electronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="647dp" />

        <CheckBox
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="528dp" />

        <CheckBox
            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Health"
            tools:layout_editor_absoluteX="265dp"
            tools:layout_editor_absoluteY="573dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>