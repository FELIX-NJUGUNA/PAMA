<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="25sp"
            android:textColor="@color/storm"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/baseline_manage_accounts_24"
            android:backgroundTint="@color/cream"
            android:textColor="@color/storm"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currency Type"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/baseline_currency_exchange_24"
            android:backgroundTint="@color/cream"
            android:textColor="@color/storm"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Limit"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/baseline_limit_24"
            android:backgroundTint="@color/cream"
            android:textColor="@color/storm"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:backgroundTint="@color/cream"
            android:textColor="@color/storm"
            android:layout_margin="10dp"
            tools:ignore="VisualLintButtonSize" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAMA version 0.1"
            android:textColor="@color/storm"
            android:textAlignment="center"
            android:layout_marginTop="400dp"/>






    </LinearLayout>

</FrameLayout>